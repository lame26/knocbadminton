{
  "name": "KNOC Badminton (Python + Node.js)",
  // Python 3.11 + Node.js LTS가 함께 설치된 이미지 사용
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "features": {
    // Node.js LTS 자동 설치 (회사 PC 설치 없이 Codespaces에서 바로 사용)
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "SETUP_GUIDE.md"
      ]
    },
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user -r requirements.txt && echo '✅ Python packages installed'",
  "postAttachCommand": {
    "streamlit": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    },
    "8787": {
      "label": "Workers API (wrangler dev)",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Frontend",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [8501, 8787, 5173]
}